<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">


	<servlet>
		<servlet-name>HomePageServlet</servlet-name>
		<servlet-class>com.organigramme.servlets.HomePageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HomePageServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>EmployeeDetailsServlet</servlet-name>
		<servlet-class>com.organigramme.servlets.EmployeeDetailsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EmployeeDetailsServlet</servlet-name>
		<url-pattern>/employee-details</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ConnectionServlet</servlet-name>
		<servlet-class>com.organigramme.servlets.ConnectionServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ConnectionServlet</servlet-name>
		<url-pattern>/connection</url-pattern>
	</servlet-mapping>

	<jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

</web-app>